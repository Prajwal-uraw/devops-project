pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Prajwal-uraw/devops-project.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'Building Docker images for service1 and service2...'
                bat "docker-compose build"
            }
        }

        stage('Run Services') {
            steps {
                echo 'Starting services...'
                bat "docker-compose up -d"
            }
        }

        stage('Test Services') {
            steps {
                echo 'Waiting for services to start...'
                // Windows-friendly delay (~5 seconds)
                bat "ping 127.0.0.1 -n 6 > nul"

                echo 'Testing Service 1...'
                bat """
                    curl -v http://localhost:5000 || (
                        echo ---- Service 1 logs ----
                        docker logs pipeine_docker-service1-1
                        echo ---- Service 2 logs ----
                        docker logs pipeine_docker-service2-1
                        exit /b 1
                    )
                """

                echo 'Testing Service 2...'
                bat """
                    curl -v http://localhost:5001 || (
                        echo ---- Service 1 logs ----
                        docker logs pipeine_docker-service1-1
                        echo ---- Service 2 logs ----
                        docker logs pipeine_docker-service2-1
                        exit /b 1
                    )
                """
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            bat "docker-compose down"
        }

        success {
            echo 'Pipeline finished successfully!'
        }

        failure {
            echo 'Pipeline failed. Check logs above for errors.'
        }
    }
}
